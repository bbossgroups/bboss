             initial_hosts="10.0.15.137[7800],10.0.15.137[7801],10.0.15.138[7800],10.0.15.138[7801],10.0.15.141[7800]"
    for dev:         
              initial_hosts="10.25.192.142[7800],10.25.192.142[7801]"
              10.25.192.142[7800],10.25.192.142[7801],10.0.14.213[7800],10.0.14.213[7801],
              10.0.14.206[8800],10.0.14.206[8801],10.0.14.213[8800],10.0.14.213[8801]
              10.25.192.142[8800],10.25.192.142[8801],10.25.192.142[8802]
              initial_hosts="10.25.192.142[8800],10.0.14.206[8800],10.0.14.206[8801],10.0.14.213[8800],10.0.14.213[8801],10.0.15.160[8800],10.0.15.160[8801],10.0.15.161[8800],10.0.15.161[8801],10.0.15.162[8800],10.0.15.162[8801],10.0.15.164[8800],10.0.15.164[8801]"
              --><TCPPING async_discovery="true"
      initial_hosts="10.0.14.206[8800],10.0.14.206[8801],10.0.14.206[8802],10.0.14.213[8800],10.0.14.213[8801],10.0.14.213[8802],10.0.15.160[8800],10.0.15.160[8801],10.0.15.160[8802],10.0.15.161[8800],10.0.15.161[8801],10.0.15.161[8802],10.0.15.162[8800],10.0.15.162[8801],10.0.15.162[8802],10.0.15.164[8800],10.0.15.164[8801],10.0.15.164[8802],10.0.15.166[8800],10.0.15.166[8801],10.0.15.166[8802],10.0.15.167[8800],10.0.15.167[8801],10.0.15.167[8802]"
             port_range="3"/>
    <MERGE3  min_interval="10000"
             max_interval="30000"/>
    <FD_SOCK/>
    <FD timeout="3000" max_tries="3" />
    <VERIFY_SUSPECT timeout="1500"  />
    <BARRIER />
    <pbcast.NAKACK2 use_mcast_xmit="false"
                   discard_delivered_msgs="true"/>
    <UNICAST3 />
    <pbcast.STABLE stability_delay="1000" desired_avg_gossip="50000"
                   max_bytes="4M"/>
    <pbcast.GMS print_local_addr="true" join_timeout="2000"
                view_bundling="true"/>
    <MFC max_credits="2M"
         min_threshold="0.4"/>
    <FRAG2 frag_size="60K"  />
    <!--RSVP resend_interval="2000" timeout="10000"/-->
    <pbcast.STATE_TRANSFER/>
</config>